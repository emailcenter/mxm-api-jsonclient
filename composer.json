{
    "name": "emailcenter/mxm-api-php",
    "description": "Emailcenter Maxemail API Client",
    "license" : "LGPL-3.0",

    "autoload": {
        "psr-4": {
            "Emailcenter\\MaxemailApi\\": "src/"
        }
    },

    "require": {
        "php" : "^7.0",
        "psr/log" : "^1.0",
        "guzzlehttp/guzzle": "^6.3"
    },

    "suggest": {
        "psr/log-implementation" : "A logger can be used to provide debug information"
    },

    "autoload-dev": {
        "psr-4": {
            "Emailcenter\\MaxemailApi\\": "tests/"
        }
    },

    "require-dev": {
        "phlib/logger": "^3.0",
        "phpunit/phpunit" : "^6.2",
        "php-mock/php-mock-phpunit": "^2.0"
    }
}
