{
    "name": "emailcenter/mxm-api-php",
    "description": "Maxemail API",
    "license" : "LGPL-3.0",

    "autoload": {
        "psr-4": {
            "Mxm\\": "src/"
        }
    },

    "require": {
        "php" : "^7.0",
        "psr/log" : "^1.0"
    },

    "suggest": {
        "ext-curl" : "cURL required to use the file upload helper",
        "psr/log-implementation" : "A logger can be used to provide debug information"
    },

    "autoload-dev": {
        "psr-4": {
            "Mxm\\Test\\": "tests/unit/"
        }
    },

    "require-dev": {
        "phpunit/phpunit" : "^4.0"
    }
}
