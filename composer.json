{
    "name": "emailcenter/mxm-api-php",
    "description": "Maxemail API",
    "licence" : "proprietary",

    "autoload": {
        "psr-4": {
            "Mxm\\": "src/"
        }
    },

    "require": {
        "php" : "^5.4|^7.0",
        "psr/log" : "^1.0"
    },

    "suggest": {
        "ext-curl" : "cURL required to use the file upload helper"
    },

    "autoload-dev": {
        "psr-4": {
            "Mxm\\Test\\": "tests/unit/"
        }
    },

    "require-dev": {
        "phpunit/phpunit" : "^4.0"
    }
}
